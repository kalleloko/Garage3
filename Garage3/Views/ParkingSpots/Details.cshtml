@model Garage3.Models.ParkingSpot

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="border border-light-subtle p-2 border-opacity-10 rounded bg-gradient box-shadow mt-5">
    <h4 class="mb-3">ParkingSpot</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            Spot Number
        </dt>
        <dd class = "col-sm-10">
            @Model.SpotNumber
        </dd>
        @* <dt class = "col-sm-2">
            Spot Size
        </dt>
        <dd class = "col-sm-10">
            @Model.SpotSize
        </dd> *@
        <dt class = "col-sm-2">
           Is Blocked
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsBlocked ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Is Occupied
        </dt>
        <dd class="col-sm-10">
           @(Model.IsOccupied ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Is Available
        </dt>
        <dd class="col-sm-10">
            @(Model.IsAvailable ? "Yes" : "No")
        </dd>
    </dl>
</div>
<div class="container mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <br />
    <a asp-action="Index">Back to List</a>
</div>
