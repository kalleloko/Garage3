@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <ul class="navbar-nav d-flex flex-row column-gap-1">

            @if (User.Identity!.IsAuthenticated)
            {
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Members" ? "active" : "")"
                           asp-controller="Members" asp-action="Index">
                            Members Overview
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(controller == "Parkings" ? "active" : "")"
                           asp-controller="Parkings" asp-action="Index">
                            Parking Management
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(controller == "ParkingSpots" ? "active" : "")"
                           asp-controller="ParkingSpots" asp-action="Index">
                            Parking Slots
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Users" ? "active" : "")"
                           asp-controller="Users" asp-action="Index">
                            Users
                        </a>
                    </li>
                }

                @if (User.IsInRole("Member") || User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(controller == "Vehicles" ? "active" : "")"
                           asp-controller="Vehicles" asp-action="Index">
                            My Vehicles
                        </a>
                    </li>
                }
            }

        </ul>
    </div>
</nav>
